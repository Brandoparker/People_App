<h1>
  <% @person.id ? 'Edit Person' : 'Add Person' %>
</h1>

<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <br />
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br />
  <%= f.label :hair_color %>
  <%= f.text_area :hair_color %>
  <br />
  <%= f.label :eye_color %>
  <%= f.text_area :eye_color %>
  <br />
  <%= f.label :gender %>
  <%= f.text_area :gender %>
  <br />
  <%= f.label :alive %>
  <%= f.text_area :alive %>
  <br />
  <%= f.submit %>
<% end %>